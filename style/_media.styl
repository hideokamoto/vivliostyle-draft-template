  .footnote
    vertical-align: super
    background-color: rgba(214, 255, 0, 0.4)
    margin: 0 .1rem

  a[data-ref="sec"]
  a[data-ref="subsec"]
  a[data-ref="fig"]
  a[data-ref="tbl"]
  a[data-ref="cite"]
    color: #bb0000
    background-color: rgba(255, 0, 0, 0.3)
  a[data-ref="sec"]::before
    content: 'XXX 章'
  a[data-ref="subsec"]::before
    content: 'XXX.XXX 章'
  a[data-ref="fig"]::before
    content: '図 XXX'
  a[data-ref="tbl"]::before
    content: '表 XXX'
  a[data-ref="cite"]::before
    content: '[XXX]'

@media print
  :root
    widows: 3
    orphans: 3
    hyphens: auto
    font-size: $master-font-size-for-print

  h1, h2, h3, h4, h5, h6
    break-after: avoid

  tr, th, td
    break-inside: avoid

@page
  size: $page-width $page-height
  margin-top: $page-margin-top
  margin-bottom: $page-margin-bottom - 6mm

  // for publishing output
  // bleed: $page-bleed
  // marks: crop cross

  page-top-style()
    content: ''
    margin-bottom: 8mm
    // border-bottom: 1px solid
    background-color: #262626

  @top-left-corner
    page-top-style()
    margin-top: - $page-bleed
    margin-left: - $page-bleed
  @top-center
    page-top-style()
    margin-top: - $page-bleed
    margin-left: -1mm
    margin-right: -1mm
    padding-left: 1mm
    padding-right: 1mm
  @top-right-corner
    page-top-style()
    margin-top: - $page-bleed
    margin-right: - $page-bleed

  @bottom-left-corner
    content:''
    margin-top: -8mm
    margin-bottom: - $page-bleed
    margin-left: - $page-bleed
    // margin-right: -1q
    background-color: white
    z-index: 1000
  @bottom-right-corner
    content: ''
    margin-top: -8mm
    margin-bottom: - $page-bleed
    margin-right: - $page-bleed
    // margin-left: -1q
    background-color: white
    z-index: 1000

@page :left
  margin-left: $page-margin-outer
  margin-right: $page-margin-inner

  @top-center
    content: env(pub-title)
    font: $nombre-font
    color: #ffffff
    text-align: left
    padding-top: 12mm
  @bottom-left
    content: counter(page)
    font: $nombre-font
    border-left: 1px solid
    margin-top: 15mm
    margin-bottom: - $page-bleed
    padding: 0 4mm 15mm 4mm
    background-color: white

@page :right
  margin-left: $page-margin-inner
  margin-right: $page-margin-outer

  @top-center
    content: env(doc-title)
    font: $nombre-font
    color: #ffffff
    text-align: right
    padding-top: 12mm
  @bottom-right
    content: counter(page)
    font: $nombre-font
    border-right: 1px solid
    margin-top: 15mm
    margin-bottom: - $page-bleed
    padding: 0 4mm 15mm 4mm
    background-color: white

@page :first
  @bottom-left
    content: ''
    border: none
  @bottom-right
    content: ''
    border: none
  @top-left
    content: ''
  @top-right
    content: ''

// style for footnote top borders
@-adapt-footnote-area ::before
  margin-inline-start: -1000px
  margin-inline-end: 70%
  margin-block-end: .8em
