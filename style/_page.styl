:root
  font-family: $body-font-family
  font-weight: $body-font-weight
  font-size 15px
  line-height: $body-line-height
  color: #000000
  word-break: normal
  line-break: strict
  overflow-wrap: break-word
  letter-spacing: $body-letter-spacing
  // font-feature-settings: 'palt', 'pwid'

strong
  font-family: $heading-font-family
  font-weight: 600
  margin: 0 .2rem
  letter-spacing: $heading-letter-spacing

h1, h2, h3, h4, h5, h6
  margin: 0
  padding: 0
  border-width: 0
  font-family: $heading-font-family
  font-weight: $heading-font-weight
  letter-spacing: $heading-letter-spacing
  line-height: $header-line-height

h1, h2, h3
  font-feature-settings: 'palt'

h1
  margin: $h1-margin
  font-size: $h1-font-size

h2
  margin: $h2-margin
  font-size: $h2-font-size

h3
  margin: $h3-margin
  font-size: $h3-font-size

h4
  margin: $h4-margin
  font-size: $h4-font-size

ul, dl, pre
  margin: .8em 0

article, section
  margin: $section-margin

p
  margin: $paragraph-margin
  text-align: justify
  text-indent: 1rem

ul, ol
  margin: 0 0 .8rem 0
  padding-left: 1.4rem
  text-align: justify
ul p, ol p
  text-indent: 0

ol > li
  padding-left: .8rem
li:not(:last-child)
  margin-bottom: .4rem

hr
  border: 0.5mm solid $color-code-bg
  margin: 8px 0

a, a:hover, a:focus, a:active, a:visited
  color: $color-link-text
  text-decoration: underline
a:hover, a:focus, a:active
  color: #ffffff
  background-color: $color-link-text

code, kbd, pre, samp
  font-feature-settings: normal
  letter-spacing: 0
  font-family: $code-font-family

dl
  text-align: justify
dt, dd
  margin: 0
  display: inline
dt
  font: $heading-font
  font-weight: 600
  margin-right: .8rem
dd
  margin: 0 0 8px 0
  & > p
    display: inherit
dd + dt::before
  content: '\A'
  white-space: pre
  line-height: 2.4
  vertical-align: top

figure
  margin: 1.5rem auto
  text-align: center
  img
    max-width: 100%
    margin: ($image-margin / 2) auto
  figcaption
    margin: $image-margin auto
    width: 90%
    font-size: 90%
    .footnote
      font-size: 75%

table
  display: table
  max-width: 100%
  margin: $image-margin auto
  border-color: #000000
  border-collapse: collapse
  tr.header
    th
      text-align: center
  th, td
    padding: 1mm 1mm 1mm 0
    &:first-child
      padding-left: 1mm
    background-color: transparent
    border: 0
    // word-break: break-all
  th
    border-top: 1px solid #000000
    border-bottom: 1px solid #000000
  td
    // border-bottom: .5px solid
    $narrow-border-width = .4px
    box-shadow: 0 $narrow-border-width+.3px 0 -.3px #000000
  tr:last-child
    border-bottom: 1px solid #000000

code
  padding: 0

pre
  position: relative
  padding: .8em 1.2em
  margin-left: -1em
  marign-right: -1em
  border: 0
  background-color: $color-code-bg
  line-height: $pre-line-height
  white-space: pre-wrap
  tab-size: 4
  box-decoration-break: clone
  word-spacing: normal
  word-break: break-all

*:not(pre) > code
  color: $color-inlinecode-text
  font-weight: 400
  margin: 0 0.2em
  padding: 0.1em 0.5em
  border: 0
  border-radius: 0.2em
  background-color: $color-inlinecode-bg

.footnote
  display: inline
  float: footnote
  font: $body-font
  line-height: $body-line-height
  font-size: 75%
  text-align: left
  text-indent: 0
  word-break: break-all
  overflow-wrap: break-word
  // word-break: normal
  line-break: strict

//
//  Document specific styles
//

article h1:first-of-type
  display: inline-block
  word-break: keep-all
  margin: -10000px 0 1.5rem -1.6rem
  padding: 10000px 1.6rem .6rem 1.6rem
  border: 1px solid

.draft-author
  text-align: right
  margin-bottom: 1.2rem
  &::before
    content: '文 ● '

.code-title
  font-size: 100%
  border-left: 1px solid
  margin-top: .8rem
  margin-bottom: -0.8rem
  padding: .6rem 1rem .4rem
pre + .code-title
  margin-top: 2rem

.multifig
  margin: 0 -1.2rem
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: flex-end
  & > *
    margin-left: 1.2rem
    margin-right: 1.2rem

.page-break
  width: 0
  height: 0
  page-break-after: always

@media print
  .float-bottom
    float: inline-end
    float-reference: page
    margin-right: -12mm
    margin-left: 12mm

figure
  img[src$='.png']
  img[src$='.jpg']
  img[src$='.jpeg']
    image-resolution: 150dpi
  img[src='/assets/arinoth/sshot-5.png']
    image-resolution: 250dpi
  img[src='/assets/takanakahiko/26VaZnc.png']
    image-resolution: 290dpi
  img[src='/assets/yamasy/265cbb0c-2e44-46c8-a31b-ee0018749c12.png']
  img[src='/assets/yamasy/b272dc5d-ebb9-4559-988f-b819a58b33cd.png']
    border: 1px solid
    image-resolution: 400dpi
  img[src='/assets/yamasy/63bc6435-c7fd-4ded-8ea9-309165024c1b.png']
    image-resolution: 300dpi
  img[src='/assets/shinyu/settings_panel.png']
    image-resolution: 200dpi
  img[src='/assets/shinyu/marks_bleed.png']
  img[src='/assets/shinyu/bleed_photo.png']
    image-resolution: 200dpi

section#profile
  .author
    display: flex
    margin: 2rem 0
    img
      margin: 0 10px 8px 0
      width: 60px
      height: 60px
      border-radius: 30px

  code > i
    vertical-align: -.03em
    margin-right: .4em

  .profile
    flex-grow: 1
    h4
      display: inline-block
      margin: 0 0 4px

section#colophon
  position: relative
  float-reference: page
  float: bottom
  margin-bottom: 0

  ul.editions
    padding: 0
    list-style: none
    time
      display: inline-block
      width: 10em

  .title
    color: #000000

  table.info
    margin: 0
    width: 100%
    border-top: 2px solid #000000
    tr:last-child
      border-bottom: 1px solid #000000
    td
      vertical-align: top
      border: 0
      box-shadow: none
      padding-left: 0

  .download-pass
    position: absolute
    right: 0
    bottom: 0
    padding: 0.1em 0.5em
    font-weight: 400
    color: #ffffff
    background-color: #000000
    border-radius: 0.2em
